
#include <iostream>
#include <math.h>
using namespace std;
 
long long soma(int a);

int main() {
    int n, temp;
    cin >> n;
    for(int i = 0; i < n; i++){
        cin >> temp;
        cout << soma(temp) << endl;

    }
    return 0;
}

long long soma(int a){
    long long m;
    int elevado = 0;
    m = a*(a+1)/2;
    while(a >= pow(2,elevado)){
        m-=2*pow(2,elevado);
        elevado ++;
        cout << m << "ta no soma" << endl;
    }
    return m;
}
